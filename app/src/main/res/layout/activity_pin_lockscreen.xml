<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_white"
    tools:context=".activities.child.PinLockscreenActivity">

    <LinearLayout
        android:id="@+id/seesharp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/seesharp" />

        <TextView
            android:id="@+id/lockActivity_childSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Change PIN"
            android:textAlignment="center"
            android:textColor="@color/light_black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seesharp">

        <TextView
            android:id="@+id/lockSubActivity_childSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Enter PIN"
            android:textAlignment="center"
            android:textColor="@color/light_black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/entry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/entry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/entry3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/entry4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/circle" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/n1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="1"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n2"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="2"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n3"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="3"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <Button
            android:id="@+id/n4"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="4"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n5"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="5"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n6"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="6"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <Button
            android:id="@+id/n7"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="7"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="8"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <Button
            android:id="@+id/n9"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="9"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <Button
            android:id="@+id/n0"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/light_black"
            android:textSize="30sp"
            app:cornerRadius="35dp" />

        <ImageButton
            android:id="@+id/nClr"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:elevation="2dp"
            app:srcCompat="@drawable/ic_baseline_backspace_24"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>