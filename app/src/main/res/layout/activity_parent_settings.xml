<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_white"
    tools:context=".activities.child.ChildSettingsActivity">

    <LinearLayout
        android:id="@+id/seesharp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@color/transparent"
            android:fontFamily="@font/bungee"
            android:text="SEESHARP"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/light_black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seesharp">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="15dp"
            android:text="Edit profile"
            android:textAlignment="viewStart"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_baseline_account_box_24"
            app:iconTint="@color/primary" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="15dp"
            android:text="Change PIN"
            android:textAlignment="viewStart"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_baseline_fiber_pin_24"
            app:iconTint="@color/primary" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="15dp"
            android:text="about us"
            android:textAlignment="viewStart"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_baseline_question_mark_24"
            app:iconTint="@color/primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="VERSION"
                android:textColor="@color/light_black" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:paddingEnd="10dp"
                android:text="1.0"
                android:textAlignment="viewEnd"
                android:textColor="@color/light_black" />

        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:background="@color/transparent"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="LOG OUT"
            android:textAlignment="viewStart"
            android:textColor="#DD2C00"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>